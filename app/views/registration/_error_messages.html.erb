<%= form_for :user, :url => { :action => :create } do |f| %>



<div class="span6" style="margin: 5% auto">
            <%= f.error_messages %>
            <div class="grid">
                <div class="row">
                    <h2>E-mail</h2>
                    <div class="span2" id="centered">
                            <div class="input-control-text">
                                <%= f.text_field :email,:placeholder => "Enter e-mail" %>
                            </div>
                    </div>
                </div>

                <div class="row">
                    <br>
                    <h2>Password</h2>
                    <div class="span2" id="centered">
                            <div class="input-control-text">
                                <%= f.password_field :password, :placeholder => "Enter password" %>
                            </div>
                    </div>
                </div>

                <div class="row" style="margin-top: 15px">
                    <div class="span2" id="centered">
                        <br><br>
                        <%= f.submit %>
                    </div>
                </div>
            </div>
        </div>

<% end %>