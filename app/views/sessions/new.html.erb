<%= form_tag sessions_path do  %>


        <div class="span6" style="margin: 5% auto">
            <div class="grid">

                <div class="row">
                    <h2>E-mail</h2>
                    <div class="span2" id="centered">
                            <div class="input-control-text">
                                 <%= text_field_tag :email, params[:email],:placeholder => "Enter E-mail" %>
                            </div>
                    </div>
                </div>

                <div class="row">
                    <br>
                    <h2>Password</h2>
                    <div class="span2" id="centered">
                            <div class="input-control-text">
                               <%= password_field_tag :password_digest, params[:password_digest],:placeholder => "Enter password" %>
                            </div>
                    </div>
                </div>

                <div class="row" style="margin-top: 15px">
                    <div class="span2" id="centered">
                        <br><br>
                         <%= submit_tag "Login"%>
                    </div>
                </div>
            </div>
        </div>

 <% end %>